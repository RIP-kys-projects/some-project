block('carousel-service')(
	replace().once()(function(){
		return {
            block: 'carousel-service-wrapper',
            content: [
                {
                    block: this.block,
                    content: [
                         {
                            block: 'carousel-list',
                            js: true,
                            items: this.ctx.items
                         },
                         {
                             elem: 'content'
                         },
                         {
                             elem: 'counter',
                             content: [
                                {
                                     elem: 'counter-current'
                                },
                                {
                                    elem: 'counter-separator',
                                    content: '/'
                                },
                                {
                                    elem: 'counter-count',
                                }
                             ]
                         },
                         {
                             elem: 'btn-prev'
                         },
                         {
                             elem: 'btn-next'
                         }
                     ]
                }
            ]
        };
	})
)
